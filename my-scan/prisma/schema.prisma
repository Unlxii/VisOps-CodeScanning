generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String          @id @default(cuid())
  name                 String?
  email                String?         @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  isSetupComplete      Boolean         @default(false)
  role                 String          @default("user")
  githubPAT            String?
  githubUsername       String?
  dockerToken          String?
  dockerUsername       String?
  defaultGitUser       String?
  defaultGitToken      String?
  defaultDockerUser    String?
  defaultDockerToken   String?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  dockerOrgName        String?
  isDockerOrganization Boolean         @default(false)
  accounts             Account[]
  groups               ProjectGroup[]
  sessions             Session[]
  supportTickets       SupportTicket[]
  
  // ✅ เก็บ field นี้ไว้ (จากการแก้ Conflict)
  status               String          @default("PENDING") 
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DockerTemplate {
  id        String   @id @default(uuid())
  stack     String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model ProjectGroup {
  id        String           @id @default(uuid())
  groupName String
  repoUrl   String
  isPrivate Boolean          @default(false)
  gitUser   String?
  gitToken  String?
  isActive  Boolean          @default(true)
  userId    String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  services  ProjectService[]

  @@index([userId, isActive])
}

model ProjectService {
  id                   String        @id @default(uuid())
  serviceName          String
  contextPath          String
  imageName            String
  dockerUser           String?
  dockerToken          String?
  useCustomDockerfile  Boolean       @default(false)
  dockerfileContent    String?
  dockerfileOverrideBy String?
  detectedLanguage     String?
  groupId              String
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  lastScanAt           DateTime?
  group                ProjectGroup  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  scans                ScanHistory[]
}

model ScanHistory {
  id                     String         @id @default(uuid())
  imageTag               String
  status                 String         @default("QUEUED")
  scanId                 String
  pipelineId             String?        @unique
  vulnCritical           Int            @default(0)
  details                Json?
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  acknowledgedAt         DateTime?
  acknowledgedBy         String?
  buildLogs              String?
  completedAt            DateTime?
  errorMessage           String?
  imagePushed            Boolean        @default(false)
  isCriticalAcknowledged Boolean        @default(false)
  isLatest               Boolean        @default(true)
  jobId                  String?        @unique
  previousScanId         String?
  queuedAt               DateTime       @default(now())
  reportJson             Json?
  scanMode               String         @default("SCAN_AND_BUILD")
  serviceId              String
  startedAt              DateTime?
  vulnHigh               Int            @default(0)
  vulnLow                Int            @default(0)
  vulnMedium             Int            @default(0)
  service                ProjectService @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([serviceId, isLatest])
  @@index([status, queuedAt])
}

model SupportTicket {
  id         String    @id @default(uuid())
  userId     String
  subject    String
  message    String
  status     String    @default("OPEN")
  priority   String    @default("NORMAL")
  adminReply String?
  adminId    String?
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([status, priority])
}