generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//NextAuth Models (สำหรับระบบ Login)


model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // เผื่อใช้ Login แบบปกติ

  // Onboarding & Setup
  isSetupComplete Boolean  @default(false)
  role            String   @default("user") // "user" | "admin"

  // GitHub Personal Access Token (Encrypted AES-256)
  githubPAT       String?  @db.Text
  githubUsername  String?
  
  // Docker Hub Token (Encrypted AES-256)
  dockerToken     String?  @db.Text
  dockerUsername  String?
  
  // Docker Hub Organization Support
  isDockerOrganization Boolean @default(false)
  dockerOrgName        String?
  
  // Legacy fields (keep for backward compatibility)
  defaultGitUser     String?
  defaultGitToken    String?  // เก็บแบบ Encrypted
  defaultDockerUser  String?
  defaultDockerToken String?  // เก็บแบบ Encrypted
  
  accounts      Account[]
  sessions      Session[]
  
  // Relation กับโปรเจกต์ของเรา
  groups        ProjectGroup[] 
  supportTickets SupportTicket[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


//Admin Configuration


model DockerTemplate {
  id        String   @id @default(uuid())
  stack     String   @unique 
  content   String   
  updatedAt DateTime @updatedAt
}

//Project Structure

model ProjectGroup {
  id        String   @id @default(uuid())
  groupName String   
  repoUrl   String   

  isPrivate Boolean  @default(false)
  gitUser   String?
  gitToken  String?  

  // Quota Management
  isActive  Boolean  @default(true) // false if deleted/archived

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  services  ProjectService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId, isActive])
}

model ProjectService {
  id          String   @id @default(uuid())
  serviceName String   
  contextPath String   
  
  imageName   String   
  dockerUser  String?
  dockerToken String?  

  // Dockerfile Override (Admin/System can inject custom Dockerfile)
  useCustomDockerfile  Boolean @default(false)
  dockerfileContent    String? @db.Text
  dockerfileOverrideBy String? // admin user ID who overrode
  
  // Language detection for auto-generation
  detectedLanguage     String? // "node" | "python" | "go" | "java"

  groupId     String
  group       ProjectGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  scans       ScanHistory[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastScanAt  DateTime?
}


//Scan Results


model ScanHistory {
  id           String   @id @default(uuid())

  serviceId    String
  service      ProjectService @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  // Job Queue & Status Management
  status       String   @default("QUEUED") // "QUEUED" | "PROCESSING" | "PASSED" | "FAILED_SECURITY" | "FAILED_BUILD" | "CANCELLED"
  scanMode     String   @default("SCAN_AND_BUILD") // "SCAN_ONLY" | "SCAN_AND_BUILD"
  
  scanId       String   
  pipelineId   String?  @unique // ควรใส่ @unique เพื่อให้ค้นหาได้ไว
  jobId        String?  @unique // Redis Queue Job ID
  
  // Vulnerability Counts
  vulnCritical Int      @default(0)
  vulnHigh     Int      @default(0)
  vulnMedium   Int      @default(0)
  vulnLow      Int      @default(0)
  
  imageTag     String   
  imagePushed  Boolean  @default(false) // true if pushed to Docker Hub
  
  // Structured Report (SARIF/JSON format)
  reportJson   Json?    @db.JsonB
  
  // Build Logs
  buildLogs    String?  @db.Text
  errorMessage String?  @db.Text
  
  // History Tracking (Latest vs Previous)
  isLatest     Boolean  @default(true)
  previousScanId String? // Reference to previous scan for comparison
  
  // Critical Resolution
  isCriticalAcknowledged Boolean @default(false)
  acknowledgedAt        DateTime?
  acknowledgedBy        String?
  
  // Timestamps
  queuedAt     DateTime @default(now())
  startedAt    DateTime?
  completedAt  DateTime?
  
  details      Json?    // Legacy field
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([serviceId, isLatest])
  @@index([status, queuedAt])
}

// Support Ticket System

model SupportTicket {
  id          String   @id @default(uuid())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subject     String
  message     String   @db.Text
  status      String   @default("OPEN") // "OPEN" | "IN_PROGRESS" | "RESOLVED" | "CLOSED"
  priority    String   @default("NORMAL") // "LOW" | "NORMAL" | "HIGH" | "URGENT"
  
  // Admin Response
  adminReply  String?  @db.Text
  adminId     String?
  resolvedAt  DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId, status])
  @@index([status, priority])
}